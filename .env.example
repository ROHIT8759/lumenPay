# ============================================================================
# LUMENPAY - MASTER ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
# This configuration matches the Master PRD specification
# ============================================================================

# ============================================================================
# DATABASE (Railway PostgreSQL + Prisma)
# ============================================================================
DATABASE_URL="postgresql://user:password@host:5432/lumenpay?schema=public"

# ============================================================================
# STELLAR NETWORK
# ============================================================================
STELLAR_NETWORK=testnet
HORIZON_URL=https://horizon-testnet.stellar.org
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# ============================================================================
# SMART CONTRACTS (Soroban)
# ============================================================================
ESCROW_CONTRACT_ID=your-deployed-escrow-contract-id
STELLAR_ADMIN_ADDRESS=your-admin-public-key

# ============================================================================
# AUTHENTICATION
# ============================================================================
JWT_SECRET=your-secure-jwt-secret-change-in-production

# ============================================================================
# KYC (DiD iT)
# ============================================================================
DIDIT_API_KEY=your-didit-api-key
DIDIT_APP_ID=your-didit-app-id
DIDIT_API_URL=https://apx.didit.me/v1
KYC_DEMO_MODE=false

# ============================================================================
# TELEGRAM BOT
# ============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=LumenPayBot

# ============================================================================
# ADMIN
# ============================================================================
ADMIN_SECRET_KEY=your-secure-admin-key

# ============================================================================
# FRONTEND (NEXT.JS PUBLIC VARS)
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_STELLAR_NETWORK=testnet
NEXT_PUBLIC_HORIZON_URL=https://horizon-testnet.stellar.org
NEXT_PUBLIC_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
NEXT_PUBLIC_ESCROW_CONTRACT_ID=your-deployed-escrow-contract-id

# ============================================================================
# OPTIONAL: SUPABASE (if using Supabase alongside Prisma)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# OPTIONAL: STOCK MARKET APIS
# ============================================================================
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_STOCK_TRADING=true
ENABLE_LOANS=true
ENABLE_ADVANCED_PAYMENTS=true

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "backend/**/*.ts",
    "frontend/mobile/**/*.ts",
    "frontend/mobile/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "frontend/web/**",
    "app/**",
    "components/**",
    "lib/**"
  ]
}

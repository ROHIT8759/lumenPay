# ============================================================================
# LumenPay Environment Configuration
# Copy this to .env.local and fill in your values
# ============================================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stellar Network Configuration
STELLAR_NETWORK=testnet
HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_USDC_ISSUER=GBBD47IF6LWK7P7MDEVSCWR7DPUWV3NY3DTQEVFL4NAT4AQH3ZLLFLA5

# Wallet Encryption Key (32 bytes hex for AES-256)
WALLET_ENCRYPTION_KEY=your-32-byte-hex-key

# Stock Market API Keys
# Get free API key at: https://www.alphavantagae.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# CoinGecko API (free tier, no key required)
COINGECKO_URL=https://api.coingecko.com/api/v3

# KYC Configuration
# Set to 'true' for hackathon demo (auto-approves KYC)
KYC_DEMO_MODE=true

# Trulioo KYC Provider (optional - for production)
TRULIOO_API_KEY=
TRULIOO_CLIENT_ID=

# Admin Configuration
# Secret key for admin API endpoints
ADMIN_SECRET_KEY=your-secure-admin-key

# Feature Flags
ENABLE_STOCK_TRADING=true
ENABLE_LOANS=true
ENABLE_ADVANCED_PAYMENTS=true

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# JWT Secret (for authentication tokens)
JWT_SECRET=your-secure-jwt-secret-change-in-production
